<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
    <tr>
      <td>
        <% if group.image_id.attached? %>
         <%= image_tag group.image_id, size: "50x50" %>
        <% else %>
         <%= image_tag 'no_image', size: "50x50" %>
        <% end %>
      </td>
      <td><%= link_to group.name, group_path(group.id) %></td>
      <td><%= group.introduction %></td>
      <td class="bi bi-people-fill"> <%= group.users.count %></td>
      <td><% if group.owner_id == current_user.id %>
           <%= link_to 'Edit', edit_group_path(group.id), class: "btn btn-sm btn-success" %>
          <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>